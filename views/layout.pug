doctype html
html(lang="en")
  head
    meta(property="og:title" content="Rare")
    meta(property="og:image" content="https://i.imgur.com/Y3phwUU.png")
    meta(property="og:image:type" content="image/png")
    meta(property="og:description" content="A social journalism website where users can post, comment, and like.")
    title= title
    link(rel="shortcut icon" href="/assets/rarefavicon.png" type="image/x-icon")
    link(rel="stylesheet" href="/style.css")
    link(href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Raleway&display=swap" rel="stylesheet")
    link(rel="api", href=`${api}`)
    script(src="https://kit.fontawesome.com/957ab26b61.js" crossorigin="anonymous")
  body
    #loading-overlay-layout
    .top-bar
      .inner-top-bar
        a.rare-logo.text-style1(href='/') Rare
        form.search-form(action='/search')
          input.search-box(name='searchBox' placeholder='search')
          button.search-button.text-style2(title='Search stories and users')
            i.fas.fa-search
        a.new-story-button.text-style2(href='/stories/new' title='Write a new story')
          i.fas.fa-pencil-alt
        .sign-in-top.text-style2 Sign in
        .register-top.text-style2 Register
  script(type="module" src="/js/layout.js")
  block content
