doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet" href="/style.css")
    link(rel="shortcut icon" href="assets/rarefavicon.png" type="image/x-icon")
    link(rel="api", href=`${api}`)
    script(src="https://kit.fontawesome.com/957ab26b61.js" crossorigin="anonymous")
  body
    .form-container.text-style2
      .form-top
        a.exit-button(href="/splash")
          i.fas.fa-times
      .form-inner-container
        .register-text Sign in
        .register-instructions-text Enter your username and password
        .errors-container
        form.register-form(action="" method="")
          input(type="text" name="userName" placeholder="enter username")
          input(type="password" name="password" placeholder="enter password")
          button.site-button(type="submit") Sign in
          button.guest-button.site-button(type="button") Guest sign in
    script(type="module" src='js/signin.js')
